{
  "extends": "../tsconfig.json", // Extend the base tsconfig
  "compilerOptions": {
    "module": "esnext", // Pages Functions use ES Modules
    "target": "esnext",
    "lib": ["webworker", "esnext", "dom.iterable"], // Include Web Worker and iterable DOM types
    "types": ["@cloudflare/workers-types"], // Type definitions for Cloudflare Workers/Pages Functions
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "noEmit": true, // Functions don't emit JS, Wrangler does
    "skipLibCheck": true,
    "moduleResolution": "bundler" // Explicitly set moduleResolution
  },
  "include": ["./**/*.ts"] // Include all TypeScript files in the functions directory
}